<!-- Tags -->
<?php if ( count( $this->tags ) > 0 ): ?>
	<h3>Tags</h3>
	<div>
		<ul>
			<?php foreach ($this->tags as $tag): ?>	
			<li>
				<a href="<?php echo "/tag/tags/" . $tag['name'] ?>"><?php echo $tag['name'] ?></a>
				<?php if ( $this->loggedIn() && $this->checkOwner( $this->creator ) ): ?>
				<a href="<?php echo "/tag/delete/id/" . $tag['id'] ?>">x</a>	
				<?php endif ?>
			</li>
			<?php endforeach ?>
		</ul>
	</div>
<?php endif ?>
<!-- End of Tags -->
